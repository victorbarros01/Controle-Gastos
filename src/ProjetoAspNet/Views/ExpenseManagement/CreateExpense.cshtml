@model ProjetoAspNet.Models.Expense_Management.Expense
@{
}

<h1> Criar Expenses</h1>

<hr/>

<div class="row">
    <form asp-action="CreateExpense">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Amount" placeholder="Amount" class="form-control"/>
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Description" placeholder="Description" class="form-control"/>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <input asp-for="IsFixed" class=" form-check-input form-control" /><label>É fixo?</label>
            <span asp-validation-for="IsFixed" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="CreateExpense" class="btn btn-primary"/>
        </div>
    </form>
</div>