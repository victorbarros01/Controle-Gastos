@model IEnumerable<ProjetoAspNet.ViewModel.ExpenseManagementViewModel>    
    
    <a asp-action="CreateExpense" class="btn btn-success" >Create Expense</a>
    <a asp-action="CreateEarning" class="btn btn-warning">Create Earning</a>
<section class="grid grid-template">
    <div class="container-dashboard">
        dashboard
    </div>


    <div class="container-expenses">
        <h1>Principais Gastos</h1>
        <table class="content-expenses">
            @foreach(var expense in Model){
                <tr>
                    <th>@Html.DisplayFor(modelItem => expense.DescriptionExpense)</th>
                    <td>R$@Html.DisplayFor(modelItem => expense.AmountExpense)</td>                           
                </tr>                        
            }
        </table>
    </div>

    <div class="container-earnings">
        <h1>Principais Ganhos</h1>
        <table class="content-earnings">
            @foreach (var earning in Model) {
                <tr>
                    <th>@Html.DisplayFor(modelItem => earning.DescriptionEarning)</th>
                    <td>R$@Html.DisplayFor(modelItem => earning.AmountEarning)</td>
                </tr>
            }
           

    </div>

    <div class="container-remaider">
        remaider
    </div>
</section>
